<?xml version="1.0"?>
<Container version="2">
  <Name>petio</Name>
  <Repository>hotio/petio</Repository>
  <Registry>https://hub.docker.com/r/hotio/petio</Registry>
  <Network>khaneproxy</Network>
  <MyIP/>
